<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Orchid.Views.ProfileView"
             Title="ProfileView"
              Shell.FlyoutBehavior="Flyout">
    <VerticalStackLayout>
        <Border 
                   Stroke="gold"
                   StrokeThickness="4"
                   StrokeShape="RoundRectangle 20,20,20,20"
                   Padding="16,8">
            <Grid Padding="10" HorizontalOptions="FillAndExpand" VerticalOptions="Start" RowSpacing="30" IsEnabled="{Binding IsEnabled}">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <Label Grid.Column="0" Grid.Row="0" Grid.ColumnSpan="2"
                   Text="{Binding CurrentUser.UserName}" HorizontalOptions="Center" Style="{StaticResource LabelStyle}"
                   FontAttributes="Bold"/>
                <Label Grid.Column="0" Grid.Row="1" Grid.ColumnSpan="2"
                   Text="{Binding CurrentUser.UserEmail}" Style="{StaticResource LabelStyle}"
                   FontAttributes="Bold" HorizontalOptions="Center"/>
                <Label Grid.Column="0" Grid.Row="2" Grid.ColumnSpan="2"
                   Text="{Binding CurrentUser.UserPassword}" Style="{StaticResource LabelStyle}"
                   FontAttributes="Bold" HorizontalOptions="Center"/>



                <Label Grid.Column="0" Grid.Row="3" Grid.ColumnSpan="2" Style="{StaticResource LabelStyle}"
                   Text="{Binding CurrentUser.AddedQuestions}"
                   HorizontalOptions="Center"/>

                <Entry Grid.Column="0" Grid.Row="4" 
                FontAttributes="Bold"
                IsEnabled="{Binding IsEnabled}"
                Placeholder="enter new email"
                Text="{Binding NewEmail}"
                HorizontalOptions="Center"/>

                <Button Grid.Column="1" Grid.Row="4" 
                 FontAttributes="Bold"
                IsEnabled="{Binding IsEnabled}"
                Text="change email"
                Command="{Binding ChangeCommand}"
                CommandParameter="email"
            />

                <Entry Grid.Column="0" Grid.Row="5"
                IsEnabled="{Binding IsEnabled}"
                FontAttributes="Bold"
                Placeholder="enter new password"
                Text="{Binding NewPass}"
                HorizontalOptions="Center"/>

                <Button Grid.Column="1" Grid.Row="5"
                IsEnabled="{Binding IsEnabled}"
                FontAttributes="Bold"
                Text="change password"
                Command="{Binding ChangeCommand}"
                CommandParameter="pass"
                />

                <Entry Grid.Column="0" Grid.Row="6"
                FontAttributes="Bold"
                IsEnabled="{Binding IsEnabled}"
                Placeholder="enter new nickname"
                Text="{Binding NewName}"
                HorizontalOptions="Center"/>

                <Button Grid.Column="1" Grid.Row="6"
                FontAttributes="Bold"
                IsEnabled="{Binding IsEnabled}"
                Text="change name"
                Command="{Binding ChangeCommand}"
                CommandParameter="name"
                />
            </Grid>
        </Border>
        <Label 
            IsVisible="{Binding IsVisible}"
            HorizontalOptions="Center"
            VerticalOptions="FillAndExpand" 
            FontSize="Large"
            Text="Updating Data..."
            />
    </VerticalStackLayout>
</ContentPage>